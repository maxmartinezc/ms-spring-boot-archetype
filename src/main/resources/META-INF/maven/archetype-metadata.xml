<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="Subprocesses Maven Archetype"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<requiredProperties>
		<requiredProperty key="springBootVersion">
			<defaultValue>2.1.5.RELEASE</defaultValue>
		</requiredProperty>
		<requiredProperty key="swaggerVersion">
			<defaultValue>2.9.2</defaultValue>
		</requiredProperty>
		<requiredProperty key="modelmapper">
			<defaultValue>2.3.3</defaultValue>
		</requiredProperty>
		<requiredProperty key="javaVersion">
			<defaultValue>1.8</defaultValue>
		</requiredProperty>
		<requiredProperty key="appPort">
			<defaultValue>5000</defaultValue>
		</requiredProperty>
		<requiredProperty key="appName">
			<defaultValue>SpringBootMicroserviceExample</defaultValue>
		</requiredProperty>
		<requiredProperty key="appDescription">
			<defaultValue>Spring Boot Microservice Description</defaultValue>
		</requiredProperty>
		<requiredProperty key="mysql">
			<defaultValue>no</defaultValue>
		</requiredProperty>
		<requiredProperty key="postgresql">
			<defaultValue>no</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.properties</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/test/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/test/resources</directory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.properties</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>
